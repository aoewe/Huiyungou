.popup {
  background-color: rgba(0, 0, 0, 0) !important;
}

.content {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

.icon {
  position: absolute;
  right: 26rpx;
  top: 22rpx;
  font-size: 42rpx;
}

.box {
  background: #fff;
  width: 80vw;
  margin: 20vh auto;
  padding: 30rpx 20rpx;
  border-radius: 30rpx;
  position: relative;
}

.box>view:nth-of-type(1) {
  font-weight: 600;
  font-weight: 600;
  text-align: center;
}

.box>view:nth-of-type(2) {
  text-align: center;
  line-height: 50rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.box>view:nth-of-type(3) {
  text-align: center;
  font-weight: 600;
  font-size: 42rpx;
}

.keyboard-group {
  padding-bottom: calc(-10rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(-10rpx + env(safe-area-inset-bottom));
  width: 100vw;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  flex-wrap: wrap;
  background: #fff;
  position: absolute;
  bottom: 0;
}

.keyboard-item {
  text-align: center;
  height: 90rpx;
  border: 1rpx solid #ccc;
  line-height: 90rpx;
  border-bottom: 0;
  border-left: 0;
  transition: all .3s;
}

.keyboard-item:active {
  background-color: #eeeeee;
  transition: all 0s;
}

.code-group {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
  font-family: -webkit-body;
}

.code-item {
  width: 80rpx;
  height: 80rpx;
  background: #ddd;
  border-radius: 8rpx;
  line-height: 90rpx;
  text-align: center;
}

.code-item>input {
  width: 80rpx;
  height: 80rpx;
  line-height: 90rpx;
  text-align: center;
}

.popup-box {
  width: 100vw;
  height: 682rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  position: absolute;
  bottom: 434rpx;
  margin-bottom: calc(-46rpx + constant(safe-area-inset-bottom));
  margin-bottom: calc(-46rpx + env(safe-area-inset-bottom));
  padding: 0 32rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}
.popup-box .icon{
  top: -60rpx;
  background-color: rgba(255, 255, 255, .6);
  border-radius: 50%;
  height: 50rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center !important;
  padding: 0 10rpx !important;
  right: 6rpx;
}
.popup-box>view:not(:last-child) {
  padding-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.popup-box .tips {
  color: #999999;
  padding-top: 10rpx !important;
  font-size: 22rpx;
}

.popup-box .submit-btn {
  width: 702rpx;
  height: 72rpx;
  background: #FF2A48;
  border-radius: 36rpx;
  text-align: center;
  line-height: 72rpx;
  color: #ffffff;
  margin-top: 36rpx;
}

.popup-box .code-item {
  background-color: #fff;
  border-left: 1px solid #999999;
  border-top: 1px solid #999999;
  border-bottom: 1px solid #999999;
  border-radius: 0;
  height: 96rpx;
  flex: 1;
}
.popup-box .code-group{
  margin-top: 0;
  border: none;
}
.popup-box .code-item:last-child{
  border-right: 1px solid #999999;
}
.popup-box .code-item>input {
  height: 96rpx;
  width: 100%;
  text-align: center;
}