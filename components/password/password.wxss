.popup {
  background-color: rgba(0, 0, 0, 0) !important;
}
.content{
  width: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}
.icon {
  position: absolute;
  right: 26rpx;
  top: 22rpx;
  font-size: 42rpx;
}

.box {
  background: #fff;
  width: 80vw;
  margin: 20vh auto;
  padding: 30rpx 20rpx;
  border-radius: 30rpx;
  position: relative;
}

.box>view:nth-of-type(1) {
  font-weight: 600;
  font-weight: 600;
  text-align: center;
}

.box>view:nth-of-type(2) {
  text-align: center;
  line-height: 50rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
}

.box>view:nth-of-type(3) {
  text-align: center;
  font-weight: 600;
  font-size: 42rpx;
}

.keyboard-group {
  padding-bottom: calc(-30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(-30rpx + env(safe-area-inset-bottom));
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
  background: #fff;
}

.keyboard-item {
  width: 249rpx;
  text-align: center;
  height: 90rpx;
  border: 1rpx solid #ccc;
  line-height: 90rpx;
  border-bottom: 0;
  border-left: 0;
  transition: all .3s;
}

.keyboard-item:active {
  background-color: #eeeeee;
  transition: all 0s;
}

.code-group {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
  font-family: -webkit-body;
}

.code-item {
  width: 80rpx;
  height: 80rpx;
  background: #ddd;
  border-radius: 8rpx;
  line-height: 90rpx;
  text-align: center;
}

.code-item>input {
  width: 80rpx;
  height: 80rpx;
  line-height: 90rpx;
  text-align: center;
}