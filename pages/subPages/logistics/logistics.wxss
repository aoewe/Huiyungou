.logs {
  padding: 36rpx 50rpx;
}

.logs-box .log::before {
  content: '';
  position: absolute;
  left: 0;
  top: 24rpx;
  transform: translateY(-50%);
  width: 18rpx;
  height: 18rpx;
  background-color: #ffffff;
  box-shadow: 0 0 0 10rpx #E0E3E4;
  border-radius: 50%;
  z-index: 99;
}

.logs-box .log:not(:last-child)::after {
  position: absolute;
  content: '';
  width: 6rpx;
  top: 24rpx;
  bottom: -36rpx;
  background: #E0E3E4;
  left: 6rpx;
}

.logs-box .log {
  font-size: 24rpx;
  margin-bottom: 30rpx;
  position: relative;
  padding: 0 0 36rpx 42rpx;
}

.logs-box .log .time {
  font-size: 26rpx;
  padding-bottom: 12rpx;
}

.logs-box .log text {
  color: #666666;
}

.logs-box {
  padding: 24rpx 0;
}

.logs-box .log.lately::before {
  box-shadow: 0 0 0 10rpx rgba(55, 92, 254, .2);
  background-color: #375CFE;
}

.logs-box .log.lately:not(:last-child)::after {
  background: #375CFE;
}

.left,
.right {
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  position: fixed;
  top: 0;
}

.left {
  left: 0;
}

.right {
  right: 0;
}

.left::before,
.right::before {
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: -20rpx -20rpx 0 0 #ffffff;
}

.right::before {
  box-shadow: 20rpx -20rpx 0 0 #ffffff;
}