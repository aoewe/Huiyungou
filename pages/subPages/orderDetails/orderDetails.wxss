page {
  background: #F3F5F7;
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-bar .van-icon {
  font-size: 44rpx;
  color: #000000;
  padding-left: 10rpx;
  font-weight: bold;
}

.col {
  width: 30%;
}

.await {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #1D1D1D;
}

.await text {
  font-size: 32rpx;
}

.await text+text {
  font-size: 26rpx;
}

.detail {
  padding: 18rpx;
}

.user-info {
  background: #ffffff;
  height: 151rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.user-info image {
  margin: 0 24rpx;
  height: 64rpx;
  width: 64rpx;
  border-radius: 50%;
}

.user-info button {
  height: 54rpx;
  width: 164rpx;
  padding: 0;
  position: absolute;
  right: 24rpx;
  top: 50;
  transform: translateY(-50%);
}

.name-phone {
  padding-bottom: 6rpx;
}

.user-info .user-name {
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  padding-right: 15rpx;
}

.user-info .phone {
  color: #666666;
  font-size: 24rpx;
}

.user-info .address,
.detailed-address {
  width: 580rpx;
  color: #666666;
  font-size: 26rpx;
}

.commodity-info {
  border-radius: 20rpx;
  background: #ffffff;
  height: 274rpx;
  width: 100%;
  padding: 24rpx 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.commodity-info .info {
  display: flex;
  position: relative;
}

.commodity-info .info .title-price {
  flex: 1;
  font-size: 28rpx;
}

.commodity-info .info .title-price view {
  display: flex;
  justify-content: space-between;
  padding-bottom: 16rpx;
}

.commodity-info .info .title-price view+view {
  color: #999999;
}

.commodity-info .info .title-price view+view text+text {
  font-size: 24rpx;
  color: #333333;
}

.commodity-info .info .title-price view text {
  display: block;
}

.commodity-name {
  width: 370rpx;
  font-weight: bold;
  color: #1D1D1D;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.commodity-name+text {
  color: #333333;
}

.commodity-info image {
  height: 180rpx;
  width: 180rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.refund {
  position: absolute;
  right: 0;
  bottom: 0;
  padding: 0;
}

.refund button {
  height: 52rpx;
  width: 160rpx;
  color: #666666;
}

.payment {
  display: flex;
  justify-content: flex-end;
}

.payment text,
.payment .money text {
  color: #999999;
  font-size: 28rpx;
}

.payment .money {
  color: #999999;
}

.payment .p-l {
  padding-left: 8rpx;
}

.payment view {
  color: #FF4701;
  font-size: 20rpx;
}

.payment-money {
  color: #1D1D1D !important;
  font-weight: bold;
}

.payment-money+view {
  font-weight: bold;
  display: flex;
  align-items: flex-end;
}

.payment view text {
  color: #FF4701;
  font-size: 26rpx;
}

.order-info {
  border-radius: 20rpx;
  margin-top: 20rpx;
  background: #ffffff;
  padding-left: 12rpx;
}

.order-info .title {
  display: inline-block;
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  padding-left: 12rpx;
  padding-top: 22rpx;
}

.order-info view {
  margin-top: 20rpx;
  padding-left: 12rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.order-info view text {
  padding-bottom: 20rpx;
}

.payment-bottom {
  height: 98rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #1D1D1D;
  font-size: 28rpx;
}

.payment-bottom view {
  display: flex;
  align-items: center;
}

.payment-bottom .van-button {
  height: 72rpx;
  border-radius: 36rpx;
  margin-right: 18rpx;
  margin-left: 65rpx;
  color: #1D1D1D !important;
  font-size: 28rpx;
  padding: 0 50rpx;
  font-weight: bold;
}