page {
  background: #F3F5F7FF;
}

.van-tabs__nav .van-tabs__line {
  background-color: #2A9F93;
  bottom: 10rpx;
  width: 38rpx !important;
}

.list {
  padding: 24rpx;
  min-height: 86vh;
}

.item {
  box-sizing: border-box;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.item .info {
  padding: 24rpx 16rpx;
  display: flex;
  padding-bottom: 6rpx;
}

.item .info image {
  border-radius: 12rpx;
}

.item .info>view {
  flex: 1;
  padding-left: 24rpx;
  font-size: 28rpx;
}

.item .info>view>view {
  display: flex;
  justify-content: space-between;
}

.item .info>view>view .title {
  width: 330rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item .info>view>view+view {
  padding-top: 26rpx;
}

.item .info .attr {
  width: 330rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item .info .attr text {
  color: #999999;
  padding-right: 10rpx;
}

.item .info>view>view+view>text+text {
  font-size: 24rpx;
}

.item .price {
  text-align: end;
  font-size: 28rpx;
  padding: 0 16rpx;
}

.item .price text+text {
  position: relative;
  padding-left: 10rpx;
}

