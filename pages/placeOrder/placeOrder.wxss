page {
  background: #FAFBFB;
}

/* 地址 */
.address {
  width: 714rpx;
  height: 132rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.sel-address {
  display: flex;
  justify-content: space-between;
}

.sel-address view {
  display: flex;
  flex-direction: column;
}

.add-address {
  flex: 1;
  width: 100%;
  height: 100%;
  transition: all .6s;
}

.add-address:active {
  color: #009882;
  transition: all 0s;
}

.sel-address view text:first-child,
.sel-shipping .title,
.address_add view {
  font-weight: bold !important;
  margin-bottom: 6rpx;
  font-size: 30rpx !important;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 500rpx;
}



.address_add {
  display: flex;
  justify-content: space-between;
}

.address_add .van-icon {
  width: auto;
}

.coupon {
  position: relative;
  overflow: hidden;
  transition: all .3s;
}

.coupon:active,
.payMode_all:active {
  transition: 0s;
  background: #eeeeee;
}

.coupon view {
  color: #009882 !important;
}


.coupon .van-icon,
.orderRemarks .van-icon {
  font-weight: 500 !important;
}

.address_add text {
  font-size: 26rpx;
}

.sel-shipping {
  display: flex;
  justify-content: space-between;
}

.address>image {
  width: 81rpx;
  height: 81rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.address>view>view:nth-of-type(1)>text,
.sel-shipping {
  font-weight: 500;
  color: #333333;
  font-size: 14px;
}

.address>view>view:nth-of-type(2) {
  display: flex;
  margin-top: 14rpx;
  justify-content: space-between;
}

.address>view>view:nth-of-type(2) text:nth-of-type(1) {
  font-size: 16px;
  font-weight: 500;
  color: #333333;
}

.address>view>view:nth-of-type(2) text:nth-of-type(2) {
  color: #999999;
}

.address>view>view:nth-of-type(3) {
  margin-top: 14rpx;
  font-size: 14px;
  font-weight: 500;
  color: #333333;
}

.address>view>view:nth-of-type(3)>text {
  padding-right: 20rpx;
}

.usercode {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  align-items: center;
}

.usercode>view:nth-of-type(2) {
  display: flex;
}

.address>.usercode>view:nth-of-type(2) {
  margin-top: 0;
}

.usercode>view:nth-of-type(1) {
  font-weight: 600;
}

.usercode>view:nth-of-type(2)>input {
  text-align: right;
}

/* 内容 */
.content1 {
  width: 714rpx;
  max-height: 700rpx;
  margin: 0 auto;
  margin-top: 24rpx;
  position: relative;
  background: #fff;
  border-radius: 20rpx;
}

.content_box {
  padding: 24rpx;
}

.content_head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.content_head>image {
  width: 32rpx;
  height: 32rpx;
}

.content_head>text:nth-of-type(1) {
  flex: 1;
  margin-left: 17rpx;
  font-weight: 500;
  font-size: 14px;
}

.content_head>text:nth-of-type(2) {
  align-self: flex-end;
  font-weight: 500;
  color: #333333;
  font-size: 14px;
}

.content_commodity {
  display: flex;
  margin-top: 35rpx;
}

.content_commodity_image>image {
  width: 160rpx;
  height: 160rpx;
}

.content_commodity_text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 24rpx;
  width: 100%;
}

.content_commodity_text>view:nth-of-type(1) {
  font-size: 16px;
  font-weight: 400;
  color: #1D1D1D;
}

.content_commodity_text_price {
  display: flex;
  justify-content: space-between;
}

.content_commodity_text_price>view:nth-of-type(2) {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.content_commodity_text_price>view:nth-of-type(2)>button:nth-of-type(1),
.add-num {
  width: 48rpx !important;
  height: 48rpx;
  border-radius: 50%;
  position: relative;
  padding: 0;
  font-size: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add-num{
  color: #fff;
}
.content_commodity_text_price>view:nth-of-type(2)>button:nth-of-type(1) .van-icon,
.add-num .van-icon {
  font-size: 26rpx;
  font-weight: 600;
}

.add-num {
  background: #009882;
}

.content_commodity_text_price>view:nth-of-type(2)>button:nth-of-type(1)::after {
  position: absolute;
  content: '';
  opacity: 0;
}

.content_commodity_text_price>view:nth-of-type(2)>text:nth-of-type(1) {
  margin: 0 20rpx;
}

.content_commodity_text_price>view:nth-of-type(2)>image:nth-of-type(1) {
  width: 48rpx;
  height: 48rpx;
}

/* 商品金额 */
.amount {
  width: 714rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background: #fff;
}

.amount>view {
  padding: 10rpx 0;
}

.amount>view>view {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 24rpx;
}

.amount>view>view:last-child {
  margin-bottom: 0;
}

.amount>view>view>view:nth-of-type(1) {
  color: #333333;
  font-weight: 400;
  font-size: 13px;
}

.amount>view>view>view:nth-of-type(2) {
  font-size: 12px;
  font-weight: 400;
  color: #333333;
}

/* 订单备注 */
.orderRemarks {
  width: 714rpx;
  /* height: 80rpx; */
  margin: 0 auto;
  background: #fff;
  margin-top: 20rpx;
  border-radius: 20rpx;
}

.orderRemarks>view {
  padding: 28rpx 24rpx 27rpx 25rpx;
  display: flex;
  justify-content: space-between;
  font-size: 13px;
}

.orderRemarks>view>view:nth-of-type(1) {
  color: #333333;
  font-weight: 500;
}

/* 支付方式 */
.payMode {
  width: 714rpx;
  margin: 20rpx auto;
  border-radius: 20rpx;
  background: #fff;
}

.payMode>view {
  padding-top: 32rpx;
  padding-bottom: 41rpx;
}

.payMode>view>view:nth-of-type(1) {
  font-weight: bold;
  color: #333333;
  font-size: 14px;
  margin-bottom: 18rpx;
  padding: 0 24rpx;
}

.payMode .payMode_all {
  padding: 18rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  overflow: hidden;
  transition: all .3s;
}

.payMode .payMode_all>image {
  width: 44rpx;
  height: 44rpx;
}

.payMode .payMode_all>text {
  padding-left: 14rpx;
  font-weight: 500;
  font-size: 14px;
  color: #333333;
  flex: 1;
}

.all_bg {
  width: 36rpx;
  height: 36rpx;
  border: 1px solid #CCCCCC;
  border-radius: 50%;
}

.all_tp {
  width: 38rpx !important;
  height: 38rpx !important;
}

/* 底部 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 110rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: calc(-30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(-30rpx + env(safe-area-inset-bottom));
}

.footer .total-price {
  display: flex;
  align-items: center;
}

.footer>view:nth-of-type(1) {
  margin-left: 18rpx;
}

.footer .text1 {
  font-weight: 500;
  color: #333333;
  font-size: 12px;
}

.footer .text2,
.text3,
.text4 {
  color: #FF4701;
  font-weight: bold;
  font-family: Heiti SC;
  font-size: 12px;
}

.footer .text3 {
  font-size: 18px;
}

.footer .text4 {
  font-size: 14px;
}

.footer>view:nth-of-type(2) {
  margin-right: 18rpx;
  width: 176rpx;
  height: 72rpx;
  background: #009882;
  border-radius: 36px;
  color: #1D1D1D;
  font-size: 13px;
  text-align: center;
  line-height: 72rpx;
  color: #fff;
}

.top-tabs {
  width: 714rpx;
  height: 72rpx;
  display: flex;
  margin: 0 auto;
  justify-content: space-between;
}

.active-tab {
  background: #ffffff !important;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  font-weight: 600;
  position: relative;
}

.active-tab view {
  position: absolute;
  bottom: 16rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 10rpx;
  height: 14rpx;
  width: 128rpx;
  background: linear-gradient(to right, #f2e7cb, #009882);
  opacity: 0.5;
}

.top-tab {
  line-height: 72rpx;
  background: #FAFBFB;
  flex: 1;
  text-align: center;
}

.code-group {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
  font-family: -webkit-body;
}

.code-item {
  width: 80rpx;
  height: 80rpx;
  background: #ddd;
  border-radius: 8rpx;
  line-height: 90rpx;
  text-align: center;
}

.code-item>input {
  width: 80rpx;
  height: 80rpx;
  line-height: 90rpx;
  text-align: center;
}
.popup-box .top{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 108rpx;
  border-bottom: 1px solid #eeeeee;
  font-size: 36rpx;
}
.pay-box{
  padding: 0 40rpx 60rpx;
}
.pay-box view{
  display: flex;
  align-items: center;
  height: 94rpx;
  border-bottom: 1px solid #eeeeee;
  font-size: 28rpx;
  color: #333333;
}
.pay-box view:active{
  opacity: .8;
}
.pay-box view:last-child{
  border-color: #fff;
}
.pay-box image{
  height: 42rpx;
  width: 42rpx;
  padding-right: 28rpx;
}
.popup-box .van-icon{
  position: absolute;
  left: 32rpx;
}