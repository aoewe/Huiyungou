<wxs module="m2">
  var toFloat = function (num) {
    return parseFloat(num)
  }
  module.exports.toFloat = toFloat;
</wxs>
<view bindtap="handelBack" class="back" style="top:{{jiaonang.top}}px;height: {{jiaonang.height}}px;">
  <van-icon size="42rpx" name="arrow-left" />
</view>
<!-- 轮播图 -->
<view class="swiper_position">
  <swiper bindchange="swiperChange" circular="false" class="main_swiper">
    <block>
      <swiper-item wx:for="{{detailData.banner_pic}}" wx:key="index">
        <view class="swiper_item">
          <van-image lazy-load bindtap="preview" data-imgarr="{{detailData.banner_pic}}" data-img="{{item}}" src="{{item}}" />
        </view>
      </swiper-item>
    </block>
  </swiper>
  <view class="swiper_item_num">
    <text wx:if="{{swiperNum}}">{{swiperNum}}</text>
    <text wx:else>1</text>
    <text>/</text>
    <text>{{detailData.banner_pic.length}}</text>
  </view>
</view>
<!-- 向上滑动 -->
<view class="top-nav" style="padding-top: {{jiaonang.top}}px; display: {{opacity==1?'block':''}};">
  <view class="top-info" style="height: {{jiaonang.height}}px">
    <van-icon size="42rpx" catchtap="handelBack" class="top-item" name="arrow-left" />
    <view class="point">
      <view bindtap="goTop" data-index="0" class="point-i {{point===0?'active':''}}">
        商品
        <view></view>
      </view>
      <view bindtap="goDetails" data-index="1" class="point-i {{point===1?'active':''}}">
        详情
        <view></view>
      </view>
    </view>
    <view class="top-item"></view>
  </view>
</view>
<!-- 内容介绍 -->
<view class="detail_content" wx:if="{{skuList[0].price}}">
  <view class="content_text">
    <text></text>
    <view class="e">¥<text>{{m2.toFloat(skuList[0].price)}}</text></view>
  </view>
  <view class="content_text2">{{detailData.product_name}}</view>
</view>

<!-- 选择规格分类 -->
<view class="choose">
  <view class="chooset">
    <view class="a">请选择<text>规格分类</text>
    </view>
    <van-icon name="arrow" />
  </view>
  <view class="threeimg">
<view class="centers"><image src="/static/icons/zpi.png"/>正品包邮</view>
<view class="centers"><image src="/static/icons/dfhi.png"/>快速发货</view>
<view class="centers"><image src="/static/icons/shi.png"/>售后无忧 </view>
  </view>
</view>

<!-- 图文详情 -->
<view class="imgText">
  <view>
    <text>图﹒文﹒详﹒情</text>
  </view>
</view>
<view class="imgText_content">
  <view>
    <van-image lazy-load fit="widthFix" bindtap="preview" data-imgarr="{{detailData.details_pic}}" data-img="{{item}}" wx:for="{{detailData.details_pic}}" src="{{item}}" wx:key="index"></van-image>
  </view>
</view>

<!-- 底部购买 -->
<van-goods-action>
  <van-goods-action-icon icon="chat-o" text="客服" bind:click="onClickIcon" />
  <van-goods-action-button text="立即购买" bind:click="onClickButton" />
</van-goods-action>


<van-card custom-class="van-card-bg" price="{{price}}" desc="{{selling_intro}}" thumb="{{ img_path }}" curSpec="{{curSpec}}"/>