page {
  padding-bottom: 24rpx;
}

.list {
  padding: 24rpx;
  border-radius: 24rpx;
  position: relative;
}

.item {
  padding: 24rpx;
  border-bottom: 2rpx solid #eeeeee;
  display: flex;
  height: 150rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
}

.news-img {
  width: 224rpx;
  height: 150rpx;
}

.news-img image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.date {
  color: #999999;
  font-size: 24rpx;
}

.item .news-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 24rpx;
}

.item .news-title {
  font-size: 28rpx;
  font-weight: 800;
  -webkit-line-clamp: 3;
}

.item .content {
  max-height: 80rpx;
  overflow: hidden;
}

.content .ellipsis-text {
  font-size: 22rpx;
  -webkit-line-clamp: 2;
  color: #666666;
}
.left,
.right {
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  position: fixed;
  top: 0;
}
.left {
  left: 0;
}

.right {
  right: 0;
}

.left::before,
.right::before {
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: -20rpx -20rpx 0 0 #ffffff;
}

.right::before {
  box-shadow: 20rpx -20rpx 0 0 #ffffff;
}

.content text {
  color: #999999;
  font-size: 20rpx;
}

.item:last-child {
  border-bottom: none;
}