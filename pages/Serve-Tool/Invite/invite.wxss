/* pages/Invite/invite.wxss */
page {
  background: linear-gradient(180deg, #34D4B8 0%, rgba(80, 216, 192, 0) 100%);
}

.top {
  display: flex;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  padding: 95rpx 35rpx 51rpx 35rpx;
  justify-content: space-between;
}

.content {
  margin: 40rpx auto;
  width: 660rpx;
  height: 1118rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
}

.head {
  width: 122rpx;
  height: 122rpx;
  background: #999999;
  border: 6px solid #FFFFFF;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(24, 120, 255, 0.12);
  border-radius: 50%;
}

.user-top {
  display: flex;
  align-items: center;
  padding: 90rpx 120rpx;
}

.user-top image {
  margin-right: 34rpx;
}

.textone {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}

.texttwo {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #666666;
  line-height: 44rpx;
}

.user-switch {
  display: flex;
  margin: auto;
  width: 432rpx;
  height: 77rpx;
  background: #EEEEEE;
  border-radius: 39rpx;
}

.switchs {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  width: 216rpx;
  height: 77rpx;
  background: #2A9F93;
  border-radius: 39rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.switchn {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  width: 216rpx;
  height: 77rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.QRcode {
  margin: 0rpx auto;
  margin-top: 74rpx;
  margin-bottom: 40rpx;
  width: 432rpx;
  height: 432rpx;
}

.QRcode image {
  width: 100%;
  height: 100%;
}

.btn-text {
  text-align: center;
  font-size: 64rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}

.btn-texts {
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #666666;
}