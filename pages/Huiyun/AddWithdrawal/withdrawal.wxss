.cont-top {
  position: absolute;
  left: 0;
  display: block;
  width: 100%;
  height: 460rpx;
  z-index: -999;
}

.top {
  display: flex;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  padding: 95rpx 35rpx 51rpx 35rpx;
  justify-content: space-between;
}

.flex {
  display: flex;
  justify-content: space-between;
  margin: 0rpx 34rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}

.block {
  width: 20rpx;
}

.Mymoney {
  font-size: 28rpx;
  font-family: PingFang SC;
