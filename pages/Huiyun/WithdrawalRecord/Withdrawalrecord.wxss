  color: #1D1D1D;
}

.cont-list {
  display: flex;
  padding: 20rpx 41rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}

.cont-list .p {
  width: 112rpx;
}

.cont-list text {
  margin-left: 40rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #1D1D1D;
}