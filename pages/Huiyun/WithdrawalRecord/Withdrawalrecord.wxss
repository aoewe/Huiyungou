.content {
  margin: 24rpx auto;
  width: 95%;
  /* height: 600rpx; */
  background: #FFFFFF;
  border-radius: 16rpx;
}
.loading{
  padding-top: 20rpx;
}
.title {
  padding: 40rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.t-money {
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}

.money {
  margin: 0rpx 35rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: OPPOSans;
  font-weight: 800;
}

.money text {
  margin-left: 10rpx;
  font-size: 68rpx;
  font-family: PingFang SC;
