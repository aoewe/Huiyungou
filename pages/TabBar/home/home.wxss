.swiper {
  height: 320rpx;
}

.banner-img{
  width: 694rpx;
  height: 320rpx;
  padding: 0 28rpx;
}
.banner-img image{
  border-radius: 16rpx;
}
.Cent-Sp {
  width: 95%;
  margin: auto;
  margin-top: 45rpx;
  display: flex;
  flex-direction: row;
}
.empty{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  height: 288rpx;
  width: 392rpx;
  padding-top: 50rpx;
}
.empty image{
  width: 100%;
  height: 100%;
}
.Sp-img {
  width: 360rpx;
  height: 202rpx;
}

.shopping {
  margin-top: 30rpx;
  text-align: center;
  font-size: 32rpx;
  color: #1D1D1D;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 28rpx;
  position: relative;
}

.product-item {
  width: 336rpx;
  margin-bottom: 10rpx;
  background-color: #fff;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, .1);
  border-radius: 8rpx;
  overflow: hidden;
}
.info{
  display: flex;
  height: 130rpx;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}
.info view{
  font-size: 28rpx;
  -webkit-line-clamp: 2;
}
.product-item image {
  width: 336rpx;
  height: 336rpx;
  border-radius: 8rpx 8rpx 0 0;
}

.textone {
  font-size: 24rpx;
  font-weight: 500;
  color: #ED213A;
}

.texttow {
  font-size: 34rpx;
  font-weight: 500;
}