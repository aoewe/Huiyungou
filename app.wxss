/**app.wxss**/
page {
  background-color: #f3f5f7;
}
/* 背景图 */
.cont-top {
  position: absolute;
  left: 0;
  display: block;
  width: 100%;
  height: 460rpx;
  z-index: -999;
}
/* 背景图 */

.header{
  position: fixed;
  font-size: 60rpx;
  width: 100%;
  font-weight: bold;
  color: #1D1D1D;
  padding-left: 28rpx;
  background-color: #F3F5F7;
  z-index: 99;
}
.no-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 288rpx;
  width: 392rpx;
}

.cnt-text {
  text-align: center;
  padding-bottom: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

.no-content image {
  width: 100%;
  height: 100%;
}
.loading {
  width: 100%;
  text-align: center;
  padding-bottom: calc(-30rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(-30rpx + env(safe-area-inset-bottom));
}
.loading text{
  font-size: 28rpx;
  color: #999999;
}
.safe{
  padding-bottom: calc(-10rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(-10rpx + env(safe-area-inset-bottom));
}
.ellipsis-text {
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-overflow: ellipsis;
  word-break: break-all;
}
.swiper-item {
  text-align: center;
  border-radius: 16rpx;
}

.swiper-img {
  width: 95%;
  height: 320rpx;
  background: #DDDDDD;
  border-radius: 16rpx;
}


/* 按钮 */

.btn {
  display: flex;
  justify-content: center;
}

.external-class {
  width: 622rpx !important;
  height: 108rpx !important;
  background: #2A9F93 !important;
  border-radius: 54rpx;
  margin: 120rpx auto 0;
  color: #ffffff;
}
